@model List<UserViewModel>
@{
    ViewData["Title"] = "User Page";
}


<div class="row">
    <div class="col">
        <h1 class="display-4">@ViewData["title"]</h1>
    </div>
</div>
<div class="row mb-3">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2"></i> Create New User </a>
    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>First Name / Last Name</th>
                    <th> Email</th>
                    <th>Role</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(UserViewModel user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td class="text-end">
                            <button type="button" class="btn btn-primary btn-sm"><i class="fa fa-edit me-2"></i>Edit</button>
                            <button type="button" class="btn btn-danger btn-sm"><i class="fa fa-trash me-2"></i>Delete</button>
                        </td> 
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>